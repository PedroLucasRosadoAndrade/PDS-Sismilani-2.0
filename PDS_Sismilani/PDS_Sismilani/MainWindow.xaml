<Window x:Class="PDS_Sismilani.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDS_Sismilani"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="450" MaxWidth="450" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF0F2E72" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>



    <DockPanel >
        <!--<Label DockPanel.Dock="Bottom" Content="Entrar" FontSize="16" Foreground="Wheat"/> -->
        <StackPanel>
            <TextBlock DockPanel.Dock="Right" Margin="0 80 0 0" Width="100" Height="20" Foreground="White" FontSize="17">Entrar</TextBlock>
            <Label Content="Usuário" Foreground="White" Width="200" Margin="0 0" />
            <TextBox Width="200" Margin=" 5 0 10 0"></TextBox>
            <Label DockPanel.Dock="Bottom" Width="200" Content="senha" FontSize="16" Foreground="White" Margin="0 0"/>
            <TextBox Width="200" Margin="5 0 10 0"></TextBox>
            <StackPanel DockPanel.Dock="Left" Width="160">
                <Button  Width="160" Height="30" Padding="5 0 20 0" Margin="5" x:Name="btLogin" Click="btLogin_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Logar</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>
        
        

    </DockPanel>
    
