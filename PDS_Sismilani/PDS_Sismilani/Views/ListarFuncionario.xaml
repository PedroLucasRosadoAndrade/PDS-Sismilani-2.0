<Window x:Class="PDS_Sismilani.Views.ListarFuncionario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDS_Sismilani.Views"
        mc:Ignorable="d"
        Title="ListarFuncionario" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.503,0.516" Background="Black">

        <DataGrid x:Name="dgvContato" HorizontalAlignment="Left" Height="179" Margin="131,97,0,0" VerticalAlignment="Top" Width="621" d:ItemsSource="{d:SampleData ItemCount=5}"/>


        <Button x:Name="btNovo" Content="Novo" HorizontalAlignment="Left" Margin="700,400,0,0" VerticalAlignment="Top" Height="22" Width="74" FontWeight="Bold" Click="btNovo_Click" Background="Green" RenderTransformOrigin="0.594,0.635"/>

    </Grid>
</Window>
