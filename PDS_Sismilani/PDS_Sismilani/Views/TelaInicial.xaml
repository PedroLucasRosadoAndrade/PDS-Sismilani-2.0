<Window x:Class="PDS_Sismilani.Views.TelaInicial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDS_Sismilani.Views"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="450">
    <Grid Background="#171515 ">
        <Grid.RowDefinitions>
            <RowDefinition Height="57"/>
            <RowDefinition Height="458"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="57"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"
                   FontSize="16" FontWeight="Bold" Padding="5" Text="Cadastros" Width="447" Background="DodgerBlue"/>

        <StackPanel Grid.Row="1" Margin="80,28,80,137" RenderTransformOrigin="0.507,0.512">
            <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="30" Width="194">
                <Button x:Name="btListarCliente" Content="Listar Cliente" Width="168" Margin="10 10" FontWeight="Bold" Background="AliceBlue" />
                <Button x:Name="btListarFilme" Content="Listar Filme" Width="167" Margin="10 10" FontWeight="Bold" Background="AliceBlue"  />
                <Button x:Name="btListarFornecedor" Content="Listar Fornecedor" Width="168" Margin="10 10" FontWeight="Bold" Background="AliceBlue" />
                <Button x:Name="btListarEstoque" Content="Listar Estoque" Width="173" Margin="10 10" FontWeight="Bold" Background="AliceBlue" Click="btListarEstoque_Click" />
                <Button x:Name="btListarFuncionario" Content="Listar Funcionario" Width="172" Margin="10 10" FontWeight="Bold" Background="AliceBlue" Click="btListarFuncionario_Click"  />
                <Button x:Name="btListarProdutora" Content="Listar Produtora" Width="174" Margin="10 10" FontWeight="Bold" Background="AliceBlue" />

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
