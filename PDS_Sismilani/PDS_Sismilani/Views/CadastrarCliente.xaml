                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButton}" Width="137">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="PackageVariantClosed" Style="{StaticResource MenuButtonIcon}"/>
                                <TextBlock Text="Estoque"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MenuButton}" Width="137">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Popcorn" Style="{StaticResource MenuButtonIcon}"/>
                                <TextBlock Text="produtos"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!--Logout -->
                    <Button Style="{StaticResource MenuButton}" Width="137" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="15 0 15 20">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource MenuButtonIcon}"/>
                            <TextBlock Text="Sair"/>
                        </StackPanel>
                    </Button>
                </DockPanel>
            </Border>

            <Grid>
